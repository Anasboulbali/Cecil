{
  "name": "narno/phpoole",
  "description": "PHPoole is an easy and lightweight static website generator, written in PHP.",
  "keywords": ["static", "website", "generator", "flat file", "markdown", "twig"],
  "homepage": "https://github.com/Narno/PHPoole",
  "license": "MIT",
  "type": "project",
  "authors": [
    {
      "name": "Arnaud Ligny",
      "email": "arnaud@ligny.org",
      "homepage": "http://narno.org",
      "role": "Developer"
    }
  ],
  "support": {
    "source": "https://github.com/Narno/PHPoole",
    "issues": "https://github.com/Narno/PHPoole/issues"
  },
  "require": {
    "php": "^5.6|^7.0",
    "narno/phpoole-library": "~1.0",
    "padraic/humbug_get_contents": "dev-master",
    "padraic/phar-updater": "^1.0",
    "symfony/filesystem": "^2.8",
    "symfony/process": "^2.8",
    "symfony/yaml": "^2.8",
    "yosymfony/resource-watcher": "^1.1",
    "zfcampus/zf-console": "^1.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^4.8",
    "kherge/box": "^2.7"
  },
  "autoload": {
    "psr-4" : {
      "PHPoole\\Command\\": "src/Command"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PHPoole\\Test\\": "tests/"
    }
  },
  "bin": ["bin/phpoole"],
  "extra": {
    "branch-alias": {
      "dev-master": "2.0.x-dev"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "repositories": [
    {
      "type": "git",
      "url": "https://github.com/PHPoole/PHPoole-library"
    },
    {
      "type": "git",
      "url": "https://github.com/Narno/file_get_contents"
    }
  ]
}
