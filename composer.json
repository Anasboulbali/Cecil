{
  "name": "narno/phpoole",
  "description": "PHPoole is a light and easy static website generator written in PHP.",
  "keywords": ["static", "website", "generator", "flat file", "markdown", "twig"],
  "homepage": "http://phpoole.narno.org",
  "license": "MIT",
  "type": "project",
  "version" : "2.0.0-dev",
  "authors": [
    {
      "name": "Arnaud Ligny",
      "email": "arnaud@ligny.org",
      "homepage": "http://narno.org",
      "role": "Developer"
    }
  ],
  "support": {
    "issues": "https://github.com/Narno/PHPoole/issues"
  },
  "require": {
    "php": ">=5.5",
    "narno/phpoole-library": "dev-develop as 1.1.x-dev",
    "symfony/filesystem": "^2.8",
    "symfony/process": "^2.8",
    "symfony/yaml": "^2.8",
    "yosymfony/resource-watcher": "^1.1",
    "zfcampus/zf-console": "^1.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^4.8",
    "kherge/box": "^2.7"
  },
  "config": {
    "bin-dir": "bin"
  },
  "bin": [
      "phpoole"
  ],
  "autoload": {
    "psr-4" : {
      "PHPoole\\Command\\": "src/Command"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PHPoole\\Test\\": "tests/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
